include /components/form/f-field

mixin p-fourth-bg({})
  .g-msg__mountans
    +svg({ name: "mountains", w: 375, h: 350, className: "mobile" })
    +svg({ name: "mountains-desktop", w: 1440, h: 460, className: "desktop" })
  .g-msg__stars-prediction
    img(class="mobile" src="./img/predictions/start-3.svg" width="87" height="83" alt="")
    img(class="desktop" src="./img/predictions/start-2.svg" width="214" height="176" alt="")
  .g-msg__img-field
    img(src="./img/predictions/predictions-field.svg" width="390" height="252" alt="")

mixin p-fourth-msg({ isHidden, isShow, className })
  .g-msg.p-fourth(class=isShow && "show" class=className hidden=isHidden)
    .g-msg__backside
      +p-fourth-bg({})
    .g-msg__content
      .g-msg__wrp
        h2.g-msg__title Сколько пробьют буллитов?
        p.g-msg__text На&nbsp;ФОНБЕТ Матче Звезд КХЛ 2025 игроки всегда проводят самые зрелищные буллиты в&nbsp;сезоне. Угадай, сколько штрафных буллитов будет в&nbsp;этот раз!
        .g-msg__btn
          +btn-default({
            text: "Сделать прогноз",
            className: "js-prediction-start"
          })

mixin p-fourth-content({ isShow, className, isHidden })
  .g-prediction(class=isShow && "show" class=className hidden=isHidden)
    .g-prediction__backside
      .g-prediction__circle
      .g-prediction__stars-additional
        img(src="./img/predictions/start-1.svg" width="243" height="133" alt="")
    .g-prediction__content
      .g-prediction__title Сколько пробьют штрафных  буллитов?
      include /data/hockey-player-list
      .g-prediction__field
        +f-field({
          type: "number",
          placeholder: "Укажи количество буллитов",
          className: "js-prediction-field"
        })
        //- input Укажи количество буллитов
        //- .f-seclect
          select.js-prediction-select
            option(value="") Укажи игрока, на которого хочешь поставить
            each it in hockeyPlayerList
              option(value=`(${it.id}) ${it.nameen}`) #{it.name} (#{it.teamname})
      .g-prediction__btn
        +btn-default({
          text: "Сделать прогноз",
          isDisabled: true,
          className: "prediction js-prediction-answer"
        })

mixin p-fourth-end({ isHidden, isShow, className })
  .g-msg.p-end(class=isShow && "show" class=className hidden=isHidden)
    .g-msg__backside
      +p-fourth-bg({})
    .g-msg__content
      .g-msg__wrp
        h2.g-msg__title Прогноз #[br] сделан!
        p.g-msg__text Уже&nbsp;12.02&nbsp;мы узнаем, насколько хорошо ты&nbsp;шаришь в&nbsp;хоккее!
        .g-msg__btn
          +btn-default({ text: "На главную", className: "js-prediction-close" })

mixin p-fourth({ isShow, className })
  .overlay(
    class="js-prediction-fourth-dialog"
    class=isShow && "show"
    class=className
  )
    .g-layout
      .g-layout__close
        +btn-close({ className: "js-prediction-close" })
      +p-fourth-msg({ isHidden: true, className: "js-prediction-msg" })
      +p-fourth-content({ isHidden: true , className: "js-prediction-content" })
      +p-fourth-end({ isHidden: false, className: "js-prediction-end" })
