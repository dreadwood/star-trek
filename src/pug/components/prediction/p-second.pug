mixin p-second-bg({})
  .g-msg__mountans
    +svg({ name: "mountains", w: 375, h: 350, className: "mobile" })
    +svg({ name: "mountains-desktop", w: 1440, h: 460, className: "desktop" })
  .g-msg__stars-prediction
    img(class="mobile" src="./img/predictions/start-3.svg" width="87" height="83" alt="")
    img(class="desktop" src="./img/predictions/start-2.svg" width="214" height="176" alt="")
  .g-msg__img-puck
    +picture({ image: "/img/predictions/predictions-puck-big.png", w: 360, h: 291 })

mixin p-second-msg({ isHidden, isShow, className })
  .g-msg.p-second(class=isShow && "show" class=className hidden=isHidden)
    .g-msg__backside
      +p-second-bg({})
    .g-msg__content
      .g-msg__wrp
        h2.g-msg__title Кто забросит #[br] первую шайбу?
        p.g-msg__text На&nbsp;ФОНБЕТ Матче Звезд КХЛ 2025 соберутся лучшие игроки лиги. Угадай, кто из&nbsp;них забросит первую шайбу в&nbsp;финале 9&nbsp;февраля!
        .g-msg__btn
          +btn-default({
            text: "Сделать прогноз",
            className: "js-prediction-start"
          })

mixin p-second-content({ isShow, className, isHidden })
  .g-prediction(class=isShow && "show" class=className hidden=isHidden)
    .g-prediction__backside
      .g-prediction__circle
      .g-prediction__stars-additional
        img(src="./img/predictions/start-1.svg" width="243" height="133" alt="")
    .g-prediction__content
      .g-prediction__title Кто забросит первую шайбу?
      include /data/hockey-player-list
      .g-prediction__field
        .f-seclect
          select.js-prediction-select
            option(value="") Укажи игрока, на которого хочешь поставить
            each it in hockeyPlayerList.regular
              option(value=`(${it.id}) ${it.nameen}`) #{it.name} (#{it.teamname})
      .g-prediction__btn
        +btn-default({
          text: "Сделать прогноз",
          isDisabled: true,
          className: "prediction js-prediction-answer"
        })

mixin p-second-end({ isHidden, isShow, className })
  .g-msg.p-end(class=isShow && "show" class=className hidden=isHidden)
    .g-msg__backside
      +p-second-bg({})
    .g-msg__content
      .g-msg__wrp
        h2.g-msg__title Прогноз #[br] сделан!
        p.g-msg__text Уже&nbsp;12.02&nbsp;мы узнаем, насколько хорошо ты&nbsp;шаришь в&nbsp;хоккее!
        .g-msg__btn
          +btn-default({ text: "На главную", className: "js-prediction-close" })

mixin p-second({ isShow, className })
  .overlay(
    class="js-prediction-second-dialog"
    class=isShow && "show"
    class=className
  )
    .g-layout
      .g-layout__close
        +btn-close({ className: "js-prediction-close" })
      +p-second-msg({ isHidden: true, className: "js-prediction-msg" })
      +p-second-content({ isHidden: true , className: "js-prediction-content" })
      +p-second-end({ isHidden: false, className: "js-prediction-end" })
