mixin p-fifth-bg({})
  .g-msg__mountans
    +svg({ name: "mountains", w: 375, h: 350, className: "mobile" })
    +svg({ name: "mountains-desktop", w: 1440, h: 460, className: "desktop" })
  .g-msg__stars-prediction
    img(class="mobile" src="./img/predictions/start-3.svg" width="87" height="83" alt="")
    img(class="desktop" src="./img/predictions/start-2.svg" width="214" height="176" alt="")
  .g-msg__img-equipment
    img(src="./img/predictions/predictions-equipment.svg" width="390" height="252" alt="")

mixin p-fifth-msg({ isHidden, isShow, className })
  .g-msg.p-fifth(class=isShow && "show" class=className hidden=isHidden)
    .g-msg__backside
      +p-fifth-bg({})
    .g-msg__content
      .g-msg__wrp
        h2.g-msg__title Какой игрок #[br] станет самым #[br] результативным?
        p.g-msg__text В&nbsp;каждом соревновании должен быть свой MVP. Угадай, какой игрок забросит больше всего шайб на&nbsp;ФОНБЕТ Матче Звезд КХЛ 2025!
        .g-msg__btn
          +btn-default({
            text: "Сделать прогноз",
            className: "js-prediction-start"
          })

mixin p-fifth-content({ isShow, className, isHidden })
  .g-prediction(class=isShow && "show" class=className hidden=isHidden)
    .g-prediction__backside
      .g-prediction__circle
      .g-prediction__stars-additional
        img(src="./img/predictions/start-1.svg" width="243" height="133" alt="")
    .g-prediction__content
      .g-prediction__title Какой игрок станет самым результативным?
      include /data/hockey-player-list
      .g-prediction__field
        .f-seclect
          select.js-prediction-select
            option(value="") Укажи игрока, на которого хочешь поставить
            each it in hockeyPlayerList.regular
              option(value=`(${it.id}) ${it.nameen}`) #{it.name} (#{it.teamname})
      .g-prediction__btn
        +btn-default({
          text: "Сделать прогноз",
          isDisabled: true,
          className: "prediction js-prediction-answer"
        })

mixin p-fifth-end({ isHidden, isShow, className })
  .g-msg.p-end(class=isShow && "show" class=className hidden=isHidden)
    .g-msg__backside
      +p-fifth-bg({})
    .g-msg__content
      .g-msg__wrp
        h2.g-msg__title Прогноз #[br] сделан!
        p.g-msg__text Уже&nbsp;12.02&nbsp;мы узнаем, насколько хорошо ты&nbsp;шаришь в&nbsp;хоккее!
        .g-msg__btn
          +btn-default({ text: "На главную", className: "js-prediction-close" })

mixin p-fifth({ isShow, className })
  .overlay(
    class="js-prediction-fifth-dialog"
    class=isShow && "show"
    class=className
  )
    .g-layout
      .g-layout__close
        +btn-close({ className: "js-prediction-close" })
      +p-fifth-msg({ isHidden: true, className: "js-prediction-msg" })
      +p-fifth-content({ isHidden: true , className: "js-prediction-content" })
      +p-fifth-end({ isHidden: false, className: "js-prediction-end" })
