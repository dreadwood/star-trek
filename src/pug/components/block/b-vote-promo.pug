mixin b-vote-promo({ className, id })
  .b-vote.promo
    .v-promo(class=className id=id)
      .v-promo__backside
        .v-promo__mountains
          img(class="mobile" src="./img/bullet/bg-snow-mobile.png" width="343" height="433" alt="")
          img(class="desktop" src="./img/bullet/bg-snow.png" width="1360" height="262" alt="")
        img.v-promo__field(src="./img/bullet/bullet-field.png" width="520" height="458" alt="")
      .v-promo__content
        h2.v-promo__title Голосование за&nbsp;самый эффектный буллит
        p.v-promo__text Получи шанс выиграть брендированный мерч от&nbsp;FONBET
        .v-promo__bottom
          .v-promo__date
            +svg({ name: "lock", w: 10, h: 13 })
            span Откроется 8 февраля
