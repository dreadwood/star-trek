{
  "trailingComma": "none",
  "semi": false,
  "tabWidth": 2,
  "singleQuote": true,
  "plugins": ["@prettier/plugin-pug"],
  "overrides": [
    {
      "files": ["*.css", "*.less", "*.sass", "*.scss"],
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": ["*.pug"],
      "options": {
        "singleQuote": false,
        "pugBracketSpacing": false,
        "pugAttributeSeparator": "as-needed"
      }
    }
  ]
}
